@model AccountLoginModelView
@inject IViewLocalizer Localizer
@{
    Layout = "_AccountLoggerLayout";
}
<div class="container">
    <div class="d-flex justify-content-center">
        <div class="col-sm-6 bg-phone-image">
            <figure class="images"></figure>
        </div>
        <div class="col-sm-6 ">
            <div class="right-column text-center" style="margin-top: 65px;">
                <div class="form-logo"></div>
                <form class="mt-3" asp-antiforgery="true" asp-action="Login" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="@Localizer["WriteAuthentificator"]" asp-for="Authetificator">
                        <span asp-validation-for="Authetificator"></span>
                    </div>
                    <div class="form-group">
                        <input class="form-control" placeholder="@Localizer["WritePassword"]" asp-for="Password">
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div asp-validation-summary="ModelOnly"></div>
                    <button type="submit" class="btn btn-primary btn-block text-center">@Localizer["LoginWord"]</button>
                </form>
            </div>
            <div class="right-column text-center" style="margin-top: 16px !important; padding: 20px !important;">
                <p style="margin-bottom: 0px;color: #262626; font-size: 14px;">
                    @Localizer["HaveAccountQuestion"] <a asp-action="Register"><bold>@Localizer["RegisterWord"]</bold></a>
                </p>
            </div>
        </div>
    </div>
</div>
@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model AccountEditModelView
@{
    ViewBag.Title = "Редактировать профиль";
}
<div class="container">
    <div class="card" style="width:800px;margin:auto;">
        <div class="card-header text-center">
            Редактировать профиль
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" asp-antiforgery="true">
                <div class="form-group">
                    <label>Ваш логин<span class="text-danger">*</span></label>
                    <input type="number" class="form-control" asp-for="UserName">
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="form-group">
                    <label>Имя и фамилия</label>
                    <input type="text" class="form-control" asp-for="NameSurname">
                    <span asp-validation-for="NameSurname"></span>
                </div>
                <div class="form-group">
                    <label>Ваша почта<span class="text-danger">*</span></label>
                    <input type="number" class="form-control" asp-for="Email">
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label>Номер телефона</label>
                    <input type="text" class="form-control" asp-for="PhoneNumber">
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
                <div class="form-group">
                    <label>Описание<span class="text-danger">*</span></label>
                    <input type="number" class="form-control" asp-for="Description">
                    <span asp-validation-for="Description"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Сохранить изменения</button>
            </form>
        </div>
    </div>
</div>
@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
